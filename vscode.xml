<style-scheme id="vscode" _name="VSCode" version="1.0">
  <author>GtkSourceView team</author>
  <_description>Classic color scheme</_description>  

  <color name="blue"       value="#5398d0"/>
  <color name="white"      value="#FFFFFF"/>
  <color name="red"        value="#FF0000"/>
  <color name="gray"       value="#BEBEBE"/>    

  <style name="text"                        foreground="#CECECE" background="#1e1e1e"/>

  <style name="def:string"                  foreground="#ce9178"/>
  <style name="def:decimal"                 foreground="#b2cba6"/>
  <style name="def:type"                    foreground="#4abea6"/>  
  <style name="def:statement"               foreground="blue"/>
  <style name="def:constant"                foreground="blue"/>
  <style name="def:function"                foreground="#d5d5a5"/>

  <style name="bracket-match"               foreground="white" background="#5e5e5e"/>
  <style name="bracket-mismatch"            foreground="white" background="red"/>

  <style name="line-numbers"                foreground="#474747" background="#1e1e1e" bold="false" />

  <style name="current-line"                background="#2e2e2e"/>
  <style name="selection"                   background="#264f78"/>    
</style-scheme>
